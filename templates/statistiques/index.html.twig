{% extends 'base.html.twig' %}

{% block title %}Statistiques produits{% endblock %}

{% block body %}
<div class="col-md-12 contenu-blanc">

    <h1>Les <span> {{  lesCategories | length }}  </span>catégories</h1>
    {{ include('messages.html.twig') }}
    <div class="contenu">
        <table class="table table-striped table-advance table-hover">
            <thead>
            <tr class="bg-entete">
                <th>Libellé</th>
                <th></th>
                <th>Nombre de produits</th>
                <th></th>
                <th>Prix mini</th>
                <th>Prix max</th>
            </tr>
            </thead>
            <tbody>

            {% for key, categorie in lesCategories %}
                <tr>
                    
                   <td>{{ categorie.libelle }}<td>
                    <td>{{ categorie.nbProduits }}<td>
                    <td>{{ categorie.minPrix | number_format(2, ',', ' ')}}</td>
                    <td>{{ categorie.maxPrix | number_format(2, ',', ' ')}}</td>
                </tr>
             {% endfor %}
           
            </tbody>
        </table>
    </div> <!--fin div contenu-->
</div> <!--fin div col-md-6-->

{% endblock %}
